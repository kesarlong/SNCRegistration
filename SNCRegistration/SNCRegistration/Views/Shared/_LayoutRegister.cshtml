<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Special Needs Camporee</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body>
    <!-- Navigation -->
    <nav class="navbar navbar-default navbar-fixed-top topnav" role="navigation">
        <div class="container topnav">
            <!-- Brand and toggle get grouped for better mobile display -->
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Special Needs Camporee", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav navbar-right">
                    <li>@Html.ActionLink("Home", "Index", "Home")</li>
                    <li>@Html.ActionLink("Contact", "Contact", "Home")</li>
                    <li>@Html.ActionLink("Log in", "Login", "Account", routeValues: null, htmlAttributes: new { id = "loginLink" })</li>
                </ul>

            </div>
        </div>
    </nav>
    <!-- Header -->

    <!-- Main -->
        <div class="container">
            <div class="row">
                <div class="banner">
                    <h2>Registration</h2>
                </div>
                <div class="col-sm-2">
                    <!-- Left column -->
                    <div class="panel panel-default">
                        <div class="panel-heading"><h4><span class="glyphicon glyphicon-wrench"></span>Tools</h4></div>
                        <div class="panel-body">
                            <ul class="nav nav-stacked">
                                <li class="nav-header">
                                    <ul class="nav nav-stacked collapse in">
                                        <li><a href="@Url.Action("Index", "Home")"><em class="glyphicon glyphicon-home"></em>Home</a></li>
                                    </ul>
                                </li>
                                <li class="nav-header">
                                    <a href="#" data-toggle="collapse" data-target="#menu2">Participant Registration<i class="glyphicon glyphicon-chevron-right"></i></a>
                                    <ul class="nav nav-stacked collapse" id="menu2">
                                        <li>
                                            <a href="@Url.Action("Create", "Guardians")">Guardian / Sponsor</a>
                                        </li>
                                        <li>
                                            <a href="@Url.Action("Create", "Participants")">Participant</a>
                                        </li>
                                        <li>
                                            <a href="@Url.Action("Create", "FamilyMembers")">Other Attendees</a>
                                        </li>
                                    </ul>


                                <li class="nav-header">
                                    <a href="#" data-toggle="collapse" data-target="#menu3">Forms<i class="glyphicon glyphicon-chevron-right"></i></a>
                                    <ul class="nav nav-stacked collapse" id="menu3">
                                        <li>
                                            <a href="@Url.Action("Index", "EventInfo")">Event Info</a>
                                        </li>
                                        <li>
                                            <a href="@Url.Action("Index", "HealthForm")">Health Form</a>
                                        </li>
                                        <li>
                                            <a href="@Url.Action("Index", "PhotoAck")">Photo/Media</a>
                                        </li>
                                    </ul>


                            </ul>
                            </div>
                        </div>
                        </div>
                        <!-- /col-3 -->
                <div class="col-sm-10">
                    <div class="panel panel-default">
                        <!-- Dashboard panel contents -->
                        <div class="panel-heading"><h3>Participant Registration</h3></div>
                            <div style="overflow:scroll;padding: 5px 5px 15px 5px;">
                                @RenderBody()
                            </div>
                        </div>
                     </div>
                </div>
          </div>
                    <!--/col-span-9-->
                </div>
                    <!-- /Main -->
                    <!-- Footer -->
                   <div class="footer-top"></div>
    
     <footer>
                        <div class="container">
                            <div class="row">

                                <div class="col-lg-12">
                                    <p class="copyright">&copy; @DateTime.Now.Year - Special Needs Camporee</p>
                                </div>
                            </div>
                        </div>
                    </footer>

                    @Scripts.Render("~/bundles/jquery")
                    @Scripts.Render("~/bundles/bootstrap")
                    @RenderSection("scripts", required: false)
</body>
</html>
