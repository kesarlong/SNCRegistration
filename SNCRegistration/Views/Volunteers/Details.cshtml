@model SNCRegistration.ViewModels.Volunteer

@{
    ViewBag.Title = "Volunteer Details";
    Layout = "~/Views/Shared/_LayoutPanel.cshtml";
}

<h2>Volunteer Details</h2>

<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.VolunteerFirstName)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.VolunteerFirstName)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.VolunteerLastName)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.VolunteerLastName)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.VolunteerAge)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.VolunteerAge)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.VolunteerShirtOrder)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.VolunteerShirtOrder)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.VolunteerShirtSize)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.VolunteerShirtSize)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.VolunteerAttendingCode)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.VolunteerAttendingCode)
        </dd>

        <dt>
            Saturday Dinner?
        </dt>

        <dd>
            @Html.DisplayFor(model => model.SaturdayDinner)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.BSType)
        </dt>
        <dd>
            @if (Model.BSType == 1)
            {<p>Individual</p>}
            else if (Model.BSType == 2)
            {<p>Troop</p>}
            else if (Model.BSType == 3)
            {<p>Troop - WoodBridge</p>}
            else if (Model.BSType == 4)
            {<p>OA Chapter: Apieka - Alachua District</p>}
            else if (Model.BSType == 5)
            {<p>OA Chapter: Seminole - Baden Powell District</p>}
            else if (Model.BSType == 6)
            {<p>OA Chapter: Timucuan - Black Creek District</p>}
            else if (Model.BSType == 7)
            {<p>OA Chapter: Oglala - Great Muskogee District</p>}
            else if (Model.BSType == 8)
            {<p>OA Chapter: Oklawaha - Marion District</p>}
            else if (Model.BSType == 9)
            {<p>OA Chapter: Osceola - Osceola & Timucua Districts</p>}
            else if (Model.BSType == 10)
            {<p>OA Chapter: Elemukulek - River Bend District</p>}
            else if (Model.BSType == 11)
            {<p>OA Chapter: Saturiwa - Shawnee District</p>}
            else if (Model.BSType == 12)
            {<p>OA Chapter: Onathequa - Suwannee River District</p>}
        </dd>



        <dt>
           TCU Number
        </dt>

        <dd>
            @Html.DisplayFor(model => model.UnitChapterNumber)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.CheckedIn)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.CheckedIn)
        </dd>


        <dt>
            @Html.DisplayNameFor(model => model.Comments)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Comments)
        </dd>

    </dl>
</div>
<p>
    @Html.ActionLink("Edit", "Edit", new { id = Model.VolunteerID }, new { @class = "btn btn-info" }) |
    @Html.ActionLink("Delete", "Delete", new { id = Model.VolunteerID }, new { @class = "btn btn-danger" }) |
    @Html.ActionLink("Back to Volunteer Search", "Index", "Volunteers", new { SearchString = Session["SessionSearchString"], sortOrder = Session["SessionSortOrder"], currentFilter = Session["SessionCurrentFilter"], searchYear = Session["SessionSearchYear"], page = Session["SessionPage"] }, new { @class = "btn btn-info" })


</p>
