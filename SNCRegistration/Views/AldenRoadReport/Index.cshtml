@model IEnumerable<SNCRegistration.ViewModels.AldenRoadReportModel>

@{
    ViewBag.Title = "Alden Road Report";
    Layout = "~/Views/Shared/_LayoutPanel.cshtml";
}

@using (Html.BeginForm("AldenRoadReport", "AldenRoadReport", FormMethod.Post))
    {


        <h2>Alden Road Report</h2>
        <div class="row">
            <div class="col-sm-3">
               
            </div>
            <div class="col-sm-9 text-right">
                <div class="col-sm-7"><h4>Select Event Year:</h4></div>
                <div class="col-sm-2">@Html.DropDownList("eventYear", new SelectList(ViewBag.ddlEventYears), new { @class = "form-control", onchange = "updateGrid()" })</div>
                <input type="submit" name="btnExportLicensing" value="Export To Excel" id="exportLicensing" class="btn btn-primary" />
            </div>
        </div>
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.ParticipantFirstName)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.ParticipantLastName)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.GuardianFirstName)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.GuardianLastName)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.ParticipantSchool)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Description)
                    </th>
                </tr>
            </thead>
            <tbody>
                @Html.Partial("_PartialAldenRoadReportList", Model)
            </tbody>
        </table>
    }


@section scripts{
    <script>
        function updateGrid() {
            $.post('/AldenRoadReport/GetAldenRoadReportByYear', { eventYear: $('#eventYear').val() }, function (data) {
                $('table tbody').html(data);
            })
        }
    </script>
}