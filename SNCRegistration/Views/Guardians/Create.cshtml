    $(document).ready(function () {
        $("#dvCount").hide();

        $("#needTent").change(function () {
            var status = ($('input[name=Tent]:checked').val());
            if ($('input[name=Tent]:checked').val() == 'True') {
                $("#dvCount").show();
            }
            else {
                $("#dvCount").hide();
            }
        });
    });

</script>



