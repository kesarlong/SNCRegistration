@model SNCRegistration.ViewModels.Guardian

@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/Shared/_LayoutPanel.cshtml";
}

<h2>Delete</h2>

<h3>Are you sure you want to delete this guardian?</h3>
<div>
    @Html.ValidationMessage("DBerror", new { @class = "text-danger" })
    <hr />
    <dl class="dl-horizontal">

        <dt>
            @Html.DisplayNameFor(model => model.GuardianFirstName)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.GuardianFirstName)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.GuardianLastName)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.GuardianLastName)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.GuardianAddress)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.GuardianAddress)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.GuardianCity)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.GuardianCity)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.GuardianZip)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.GuardianZip)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.GuardianCellPhone)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.GuardianCellPhone)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.GuardianEmail)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.GuardianEmail)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.HealthForm)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.HealthForm)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.PhotoAck)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.PhotoAck)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Tent)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Tent)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.AttendingCode)
        </dt>

        <dd>
            @if (Model.AttendingCode == 2)
            {
                <p>Saturday Only</p>
            }
            else if (Model.AttendingCode == 3)
            {
                <p>Overnight</p>
            }
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Comments)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Comments)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Relationship)
        </dt>

        <dd>
            @if (Model.Relationship == 1)
            {
                <p>Mother / Father</p>
            }
            else if (Model.Relationship == 2)
            {
                <p>Legal Guardian</p>
            }
            else if (Model.Relationship == 3)
            {
                <p>Sister / Brother</p>
            }
            else if (Model.Relationship == 4)
            {
                <p>Grandmother / Grandfather</p>
            }
            else if (Model.Relationship == 5)
            {
                <p>Teacher / Instructor</p>
            }
            else if (Model.Relationship == 6)
            {
                <p>Other - Family - relationship not listed</p>
            }
            else if (Model.Relationship == 7)
            {
                <p>Other - See Comments</p>
            }
        </dd>

    </dl>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <div class="form-group pull-left">
                <input type="submit" value="Delete" class="btn btn-danger" />
            </div>

            <div class="form-group pull-right">
                @Html.ActionLink("Back to Guardian Details", "Details", new { id = Model.GuardianID }, new { @class = "btn btn-info" })

            </div>
        </div>
    }
</div>
