<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Special Needs Camporee</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body>
    <!-- Navigation -->
    <nav class="navbar navbar-default navbar-fixed-top topnav" role="navigation">
        <div class="container topnav">
            <!-- Brand and toggle get grouped for better mobile display -->
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Special Needs Camporee", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav navbar-right">
                    @*<li>@Html.ActionLink("Home", "Index", "Home")</li>*@
                   
                    <li>@Html.Partial("_LoginPartial")</li>
                </ul>

            </div>
        </div>
    </nav>
    <!-- Header -->

   
            @RenderBody()
      
    
        <!-- Footer -->
        <div class="footer-top"></div>
        <footer>
            <div class="container">
                <div class="row">
                    <div class="col-lg-12">
                   @*slider*@
                        <div id="Sponsors" class="carousel slide" data-ride="carousel">
                            <!-- Indicators -->
                            <ol class="carousel-indicators">
                                <li data-target="#Sponsors" data-slide-to="0" class="active"></li>
                                <li data-target="#Sponsors" data-slide-to="1"></li>
                                <li data-target="#Sponsors" data-slide-to="2"></li>
                                <li data-target="#Sponsors" data-slide-to="3"></li>
                                <li data-target="#Sponsors" data-slide-to="4"></li>
                                <li data-target="#Sponsors" data-slide-to="5"></li>
                                <li data-target="#Sponsors" data-slide-to="6"></li>
                                <li data-target="#Sponsors" data-slide-to="7"></li>
                            </ol>
                            <!-- Wrapper for slides -->

                            <div class="carousel-inner" role="listbox">
                                    <div class="item active">
                                        <img src="https://sncr.blob.core.windows.net/images/Sponsor1.png">
                                        <div class="carousel-caption">
                                           Sponsor
                                        </div>
                                    </div>
                                <div class="item">
                                    <img src="https://sncr.blob.core.windows.net/images/Sponsor2.png">
                                    <div class="carousel-caption">
                                        Sponsor
                                    </div>
                                    </div>
                                <div class="item">
                                    <img src="https://sncr.blob.core.windows.net/images/Sponsor3.png">
                                    <div class="carousel-caption">
                                        Sponsor
                                    </div>
                                </div>
                                <div class="item">
                                    <img src="https://sncr.blob.core.windows.net/images/Sponsor4.png">
                                    <div class="carousel-caption">
                                        Sponsor
                                    </div>
                                </div>
                                <div class="item">
                                    <img src="https://sncr.blob.core.windows.net/images/Sponsor5.png">
                                    <div class="carousel-caption">
                                        Sponsor
                                    </div>
                                </div>
                                <div class="item">
                                    <img src="https://sncr.blob.core.windows.net/images/Sponsor6.png">
                                    <div class="carousel-caption">
                                        Sponsor
                                    </div>
                                </div>
                                <div class="item">
                                    <img src="https://sncr.blob.core.windows.net/images/Sponsor7.png">
                                    <div class="carousel-caption">
                                        Sponsor
                                    </div>
                                </div>
                                <div class="item">
                                    <img src="https://sncr.blob.core.windows.net/images/Sponsor8.png">
                                    <div class="carousel-caption">
                                        Sponsor
                                    </div>
                                </div>
                                
                                </div>
                        </div>
                    </div>
                    <div class="col-lg-12">
                        <p class="copyright">&copy; @DateTime.Now.Year - Special Needs Camporee</p>
                    </div>
                </div>
            </div>
        </footer>


        @Scripts.Render("~/bundles/jquery")
        @Scripts.Render("~/bundles/bootstrap")
        @RenderSection("scripts", required: false)
        </div>
</body>
</html>
